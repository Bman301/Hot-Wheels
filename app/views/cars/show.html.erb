<style>
	.show {
		background-image: url("<%= @car.photo%>");
		height: 100%;
		background-position: center;
		background-repeat: no-repeat;
		background-size: cover;
	}
</style>


<div class="container-fluid mb-5 pb-5 show">
	<br>
	<div class="row">
		<div class="col px-0">
			<h1 class="ml-0 title-showpage px-0" style="background-color: white">&nbsp;<%= @car.title %></h1>
			<div>
				<div class="row mx-0">
					<div class="col-2 mx-0"></div>
					<div class="col-8">

						<article class="postcard blue mt-4">

							<img class="postcard__img" src="<%= @car.photo%>" alt="car photo" />

							<div class="postcard__text">
								<h1 class="postcard__title blue"><%= @car.brand %>&nbsp;<%= @car.model %>: <%= @car.year %></h1>
								<div class="postcard__subtitle small">

									<i class="fas fa-dollar-sign mr-1"></i><%= @car.price %>

								</div>
								<div class="postcard__bar"></div>
								<div class="postcard__preview-txt"><%= @car.description %></div>
								<ul class="postcard__tagbox">
									<a href="<%= new_car_booking_path(@car) %>">
										<li class="tag__item"><i class="fas fa-car mr-2"></i>Rent this car</li>
									</a>
									<li class="tag__item"><i class="fas fa-map-marker-alt mr-2"></i><%= @car.location %></li>
									<!--	<li class="tag__item"><i class="fas fa-clock mr-2"></i>55 mins.</li>
				<li class="tag__item play blue">
					<a href="#"><i class="fas fa-play mr-2"></i>Play Episode</a> -->
									</li>
								</ul>
							</div>
						</article>
						<div class="mapcard mt-4 mb-5">
							<h1><%=image_tag("map-test.jpg", alt: "test map", style: 'width: 100%')%></h1>
						</div><br><br><br>
					</div>

				</div>
			</div>
		</div>